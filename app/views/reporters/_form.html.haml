= form_for @reporter do |f|
  - if reporter.errors.any?
    #error_explanation
      %h3
        = pluralize(@reporter.errors.count, "error")
        prohibited this reporter from being saved:
      %ul.errors
        - @reporter.errors.full_messages.each do |message|
          %li= message
  %ul.inputs
    %li
      = f.label :name
      = f.text_field :name, id: :reporter_name
    %li
      = f.label :email
      = f.text_field :email, id: :email
    %li
      = f.label :phone_number
      = f.text_field :phone_number, id: :phone_number
    %li.actions
      = f.submit 'Save'
