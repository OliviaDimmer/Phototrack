= form_for @shoot do |f|
  - if shoot.errors.any?
    #error_explanation
    %h2
      = pluralize(shoot.errors.count, "error")
      prohibited this shoot from being saved:
    %ul
      - shoot.errors.full_messages.each do |message|
        %li= message
  %p.field
    = f.label :slug
    = f.text_field :slug, id: :shoot_slug
  %p.field
    = f.label :assignment_description
    = f.text_area :assignment_description, id: :assignment_description, rows: 10, cols: 60
  %p.field
    = f.label :start
    = f.datetime_field :start, id: :start
  %p.field
    = f.label :end
    = f.datetime_field :end, id: :end
  %p.field
    = f.label :location
    = f.text_field :location, id: :location
  %p.field
    = f.label :contact_name
    = f.text_field :contact_name, id: :contact_name
  %p.field
    = f.label :contact_phone_number
    = f.text_field :contact_phone_number, id: :contact_phone_number
  %p.field
    = f.label :deadline
    = f.datetime_field :deadline, id: :deadline
  .actions
    = f.submit 'Save'
